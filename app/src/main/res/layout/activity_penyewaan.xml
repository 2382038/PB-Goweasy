<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Back Button -->
    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="37dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:contentDescription="Back"
        android:src="@drawable/ic_back_"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Lokasi -->
    <TextView
        android:id="@+id/txt_lokasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lokasi: Area Kampus"
        android:textSize="16sp"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@+id/btn_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />

    <!-- Gambar Sepeda -->
    <ImageView
        android:id="@+id/img_sepeda"
        android:layout_width="250dp"
        android:layout_height="180dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/beamrover"
        android:contentDescription="Gambar Sepeda"
        app:layout_constraintTop_toBottomOf="@+id/txt_lokasi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Pilih Paket -->
    <TextView
        android:id="@+id/txt_paket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pilih Paket Sewa:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/img_sepeda"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp" />

    <RadioGroup
        android:id="@+id/radioGroup_paket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_paket"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp">

        <RadioButton
            android:id="@+id/paket1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 jam - Rp30.000" />

        <RadioButton
            android:id="@+id/paket2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 jam - Rp50.000" />
    </RadioGroup>

    <!-- Metode Pembayaran -->
    <TextView
        android:id="@+id/txt_metode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Metode Pembayaran:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup_paket"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp" />

    <Spinner
        android:id="@+id/spinner_pembayaran"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_metode"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp" />

    <!-- Tombol Bayar -->
    <Button
        android:id="@+id/btn_bayar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="116dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="#0D47A1"
        android:text="Bayar"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_pembayaran" />

</androidx.constraintlayout.widget.ConstraintLayout>